<%-include('../header') %> 
<%-include('../sidebar') %> 
   <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Coupon
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/admin/coupon">Coupon</a></li>
        <li class="active">Edit Coupon</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">

      <div class="row">
		<% if (locals.flashmessages) { %>
		<div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
		  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
		  <%=flashmessages.alert_msg%>
		</div>
		<% } %>
        <div class="col-md-3"> 
          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">				
              <h4 class=" text-center">Coupon Id: <%=coupon._id%></h4>
            </div>
          </div>  
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="alert alert-success" id="success_alert" style="display: none;">
  <strong>Success!</strong>
</div>

          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#activity" data-toggle="tab">Update Coupon</a></li>
            </ul>
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <form class="form-horizontal" id="add_coupon" method="post" action="/admin/coupon/update_coupon">
                  <div class="form-group">
                    <label for="coupon_code" class="col-sm-2 control-label">Coupon Code</label>

                    <div class="col-sm-10">
                      <input type="text" value="<%=coupon.coupon_code; %>" name="coupon_code" class="form-control" id="coupon_code" placeholder="Enter Coupon Code">
                    </div>
                  </div>
                  <div class="form-group">                    
						<label class="col-sm-2 control-label">Expiry Date:</label>

						<div class="input-group date col-sm-10" style="padding-left: 15px; padding-right: 15px;">
						  <div class="input-group-addon"><i class="fa fa-calendar"></i></div>
						  <input class="form-control pull-right" id="expiry_date" name="expiry_date" type="text" value="<%=coupon.expiry_date||"" %>" />
						</div>
						<!-- /.input group -->					
                  </div>
                  
				  <div class="form-group">
                    <label for="multiple_use" class="col-sm-2 control-label">Multiple Use</label>

                    <div class="col-sm-10">
						<%
						if(coupon.multiple_use == "1" || coupon.multiple_use == 1)
							checked = "checked";
						else
							checked = "";
						%>
						<label class="switch" style="margin-left: 10px;">
						  <input type="checkbox" id="multiple_use" name="multiple_use" <%=checked%> style="position: relative; top: 7px;" />
						  <span class="slider round"></span>
						</label>
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <label for="percent" class="col-sm-2 control-label">Percent</label>

                    <div class="col-sm-10">
                      <input type="number" value="<%=coupon.percent; %>" name="percent" class="form-control" id="percent" placeholder="Discount Percent" />
                    </div>
                  </div>
				  
				  
				  <div class="form-group">
					<label for="service_ids" class="col-sm-2 control-label">For Services</label>

					<div class="col-sm-10">
					  <select class="form-control" id="service_ids" name="service_ids" multiple>
							<option value="">--Select --</option>
							<% for(var i = 0; i < id_services.length; i++) { %>
								<%
									var selected ="";
									if(coupon.service_ids.indexOf("" + id_services[i]) != -1) {
										selected = "selected";
									}
								%>
								<option value="<%=id_services[i]%>" <%=selected%>><%=service_names[i]%></option>
							<% } %>
					  </select>
					</div>
				  </div>
				  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <input type="hidden" id="coupon_id" name="coupon_id" value="<%=coupon._id; %>">
                      <button type="submit" id="submit" class="btn btn-success">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
                            
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <script language="javascript">
  //Date picker
  jQuery(document).ready(function(){
	 jQuery('#expiry_date').datepicker({
      autoclose: true
	 })
  });
   
  </script>
  <%-include('../footer') %> 
<%-include('header') %>
  <%-include('sidebar') %>
    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <h1>
          User Profile
        </h1>
        <ol class="breadcrumb">
          <li>
            <a href="/admin/dashboard">
              <i class="fa fa-dashboard"></i> Home</a>
          </li>
          <li class="active">User profile</li>
        </ol>
      </section>
      <!-- Main content -->
      <section class="content">

        <div class="row">
          <div class="col-md-12">
            <% if (locals.flashmessages) { %>
              <div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
                <%=flashmessages.alert_msg%>
              </div>
              <% } %>
          </div>
          <div class="col-md-4">
            <!-- Profile Image -->
            <div class="box box-primary">
              <div class="box-body box-profile">
                <img class="profile-user-img img-responsive img-circle" src="<%=user_data.user_image; %>" alt="User profile picture">
                <h3 class="profile-username text-center">
                  <%=user_data.fullname; %>
                </h3>
                <ul class="list-group list-group-unbordered">
                  <li class="list-group-item">
                    <b>Email</b>
                    <a class="pull-right">
                      <%=user_data.email; %>
                    </a>
                  </li>
                  <li class="list-group-item">
                    <b>Phone</b>
                    <a class="pull-right">
                      <%=profile_data.phone; %>
                    </a>
                  </li>
                  <li class="list-group-item" style="display: inline-block; width: 100%;">
                    <b>Address</b>
                    <a id="user_address" class="pull-right">
                        <%=profile_data.address; %>
                    </a>
                  </li>
                  <li class="list-group-item">
                    <b>User Role</b>
                    <a class="pull-right">Admin</a>
                  </li>
                </ul>
              </div>
            </div>
          </div>
          <!-- /.col -->
          <div class="col-md-8">
            <div class="alert alert-success" id="success_alert" style="display: none;">
              <strong>Success!</strong>
            </div>

            <div class="nav-tabs-custom">
              <ul class="nav nav-tabs">
                <li class="active">
                  <a href="#activity" data-toggle="tab">Update Profile</a>
                </li>
                <li>
                  <a href="#settings" data-toggle="tab">Change Password</a>
                </li>
              </ul>
              <div class="tab-content">
                <div class="active tab-pane" id="activity">
                  <form class="form-horizontal" encType="multipart/form-data" method="post" action="/admin/update_profile">
                    <div class="form-group">
                      <label for="name" class="col-sm-3 control-label">Name</label>

                      <div class="col-sm-6">
                        <input type="text" value="<%=user_data.fullname; %>" name="fullname" class="form-control" id="name" placeholder="Enter name">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputEmail" class="col-sm-3 control-label">Email</label>

                      <div class="col-sm-6">
                        <input type="email" disabled value="<%=user_data.email; %>" name="new_password" class="form-control" id="inputEmail" placeholder="Enter Email">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="inputEmail" class="col-sm-3 control-label">Phone</label>

                      <div class="col-sm-6">
                        <input type="number" value="<%=user_data.phone; %>" name="phone" class="form-control" id="inputEmail" placeholder="Enter Phone number">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="address" class="col-sm-3 control-label">Address</label>

                      <div class="col-sm-6">
                        <textarea name="address" class="form-control" rows="5" id="comment"><%=profile_data.address; %></textarea>
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="profile" class="col-sm-3 control-label">Profile</label>

                      <div class="col-sm-6">
                        <input type="file" name="profile" class="form-control" id="profile" placeholder="Profile" style="padding-top: 0px; padding-left: 0px;">
                      </div>
                    </div>
                    <div class="form-group">
                      <div class="col-sm-offset-2 col-sm-10">
                        <input type="hidden" id="user_id" name="user_id" value="<%=user_data._id; %>">
                        <button type="submit" id="submit" class="btn btn-success">Submit</button>
                      </div>
                    </div>
                  </form>
                </div>


                <div class="tab-pane" id="settings">
                  <form class="form-horizontal" name="registration" id="update_admin_password" method="post" action="/admin/user/update_admin_password">
                    <div class="form-group">
                      <label for="password" required class="col-sm-3 control-label">Old password</label>

                      <div class="col-sm-6">
                        <input type="password" name="old_password" class="form-control" id="old_password" placeholder="Old password">
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="new_password" required class="col-sm-3 control-label">New Password</label>

                      <div class="col-sm-6">
                        <input type="password" id="new_password" name="new_password" class="form-control" placeholder="New password">
                      </div>
                    </div>

                    <div class="form-group">
                      <label for="confirm_password" required class="col-sm-3 control-label">Confirm Password</label>

                      <div class="col-sm-6">
                        <input type="password" id="confirm_password" name="confirm_password" class="form-control" placeholder="Re-type password">
                      </div>
                    </div>

                    <div class="form-group">
                      <div class="col-sm-offset-3 col-sm-9">
                        <input type="hidden" id="user_id" name="user_id" value="<%=user_data._id; %>">
                        <button type="submit" class="btn btn-danger">Submit</button>
                      </div>
                    </div>
                  </form>
                </div>
                <!-- /.tab-pane -->
              </div>
              <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->

      </section>
      <!-- /.content -->
    </div>

    <%-include('footer') %>
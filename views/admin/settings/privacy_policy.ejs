<%-include('../header') %> 
<%-include('../sidebar') %> 
   <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Privacy policy
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Privacy policy</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">

      <div class="row">
		<% if (locals.flashmessages) { %>
			<div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
			  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
			  <%=flashmessages.alert_msg%>
			</div>
		 <% } %>
        
        <!-- /.col -->
        <div class="col-md-12">
          <div class="alert alert-success" id="success_alert" style="display: none;">
  <strong>Success!</strong>
</div>
          <div class="nav-tabs-custom">
           
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <form class="form-horizontal" id="payment_setting" method="post" action="/admin/privacy_policy">
                  <div class="form-group">
                    <label for="stripe_email" class="col-sm-4 control-label">Title</label>

                    <div class="col-sm-8">
                      <input type="text" value="<%=privacy_policy_data[0].key%>" disabled name="title" class="form-control" id="title" placeholder="Enter title" />
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="stripe_secret_key" class="col-sm-4 control-label">Contant</label>

                    <div class="col-sm-8">
                      <textarea id="content" name="content"><%=privacy_policy_data[0].value%></textarea>
                    </div>
                  </div>
                 
				 
				  
                  <div class="form-group">
                    <div class="col-sm-offset-4 col-sm-8">
      
                      <button type="submit" id="btnsubmit" name="btnsubmit" class="btn btn-success">Submit</button>
                    </div>
                  </div>
                </form>
              </div>
              
              <!-- /.tab-pane -->
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  
  <%-include('../footer') %> 
<%-include('../header') %> 
<%-include('../sidebar') %> 
   <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Service
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/list/services">Services</a></li>
        <li class="active">Update Service</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">

      <div class="row">
		<% if (locals.flashmessages) { %>
		<div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
		  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
		  <%=flashmessages.alert_msg%>
		</div>
		<% } %>
        <div class="col-md-3"> 
          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">				
              <h4 class=" text-center">Service ID: <%=service._id%></h4>
            </div>
          </div>  
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="alert alert-success" id="success_alert" style="display: none;">
  <strong>Success!</strong>
</div>

          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#activity" data-toggle="tab">Service Details</a></li>
            </ul>
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <form class="form-horizontal" method="post" action="/admin/services/update_service">
                  <div class="form-group">
                    <label for="coupon_code" class="col-sm-2 control-label">Service Category</label>

                    <div class="col-sm-10">
                      <input type="text" value="" name="coupon_code" class="form-control" id="coupon_code" placeholder="Enter Coupon Code">
                    </div>
                  </div>
                  <div class="form-group">                    
						<label class="col-sm-2 control-label">Service Name</label>

						<div class="col-sm-10">
						  <input type="text" value="" name="coupon_code" class="form-control" id="coupon_code" placeholder="Enter Coupon Code">
						</div>
                  </div>
                  
				  
                  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <input type="hidden" id="service_id" name="service_id" value="<%=service._id; %>">
                      <button type="submit" id="submit" class="btn btn-success">Submit</button>
                      <button type="button" id="btndelete" class="btn btn-danger">Delete</button>
                    </div>
                  </div>
                </form>
              </div>
                            
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <script language="javascript">
  //Date picker
  jQuery(document).ready(function(){
	 jQuery('#expiry_date').datepicker({
      autoclose: true
	 })
  });
   
  </script>

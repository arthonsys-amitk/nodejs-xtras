<%-include('../header') %> 
<%-include('../sidebar') %> 
   <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        Update Service
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/list/services">Services</a></li>
        <li class="active">Update Service</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">

      <div class="row">
		<% if (locals.flashmessages) { %>
		<div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
		  <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
		  <%=flashmessages.alert_msg%>
		</div>
		<% } %>
        <div class="col-md-3"> 
          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">				
              <h4 class=" text-center">Service ID: <%=service._id%></h4>
            </div>
          </div>  
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="alert alert-success" id="success_alert" style="display: none;">
  <strong>Success!</strong>
</div>

          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#activity" data-toggle="tab">Service Details</a></li>
            </ul>
            <div class="tab-content">
              <div class="active tab-pane" id="activity">
                <form class="form-horizontal" method="post" action="/admin/services/update_service">
                  <div class="form-group">
                    <label for="coupon_code" class="col-sm-2 control-label">Service Category</label>

                    <div class="col-sm-10">
                      <select id="service_category_id" name="service_category_id" class="form-control">
						<option value="">--Select Category--</option>
					  <%
						if(service.all_categories != null && service.all_categories != undefined ) {
							for(var i = 0; i < service.all_categories.length; i++) {
								var selected = "";
								if(service.service_category_id == service.all_categories[i]._id) {
									selected = "selected";
								}
							%>
							<option value="<%=service.all_categories[i]._id%>" <%=selected%>><%=service.all_categories[i].category_name%></option>
							<%
							}
						}
					  %>
					  </select>
                    </div>
                  </div>
                  <div class="form-group">                    
						<label class="col-sm-2 control-label">Service Name</label>

						<div class="col-sm-10">
						  <input type="text" value="<%=service.service_name%>" name="service_name" class="form-control" id="service_name" placeholder="Enter Service Name">
						</div>
                  </div>
                  
				  
				  <div class="form-group">                    
						<label class="col-sm-2 control-label">Service Type</label>							
						<div class="col-sm-10">
							<%
								var individual = "";
								var business = "";
								if(service.service_type == "individual") {
									individual = "selected";
								} else {
									business = "selected"
								}
							%>
						  <select id="service_type" name="service_type" class="form-control">
								<option value="individual" <%=individual%>>Individual</option>
								<option value="business" <%=business%>>Business</option>
						  </select>
						</div>
                  </div>
				  
				  <div class="form-group">                    
						<label class="col-sm-2 control-label">Service Name</label>

						<div class="col-sm-10">
						  <textarea name="additional_details" class="form-control" id="additional_details" placeholder="Enter Additional Details"><%=service.additional_details%></textarea>
						</div>
                  </div>
				  
				  <div class="form-group">                    
						<label class="col-sm-2 control-label">Service Radius</label>

						<div class="col-sm-10">
						  <input type="text" value="<%=service.service_radius%>" name="service_radius" class="form-control" id="service_radius" placeholder="Enter Service Radius">
						</div>
                  </div>
				  <div class="form-group">                    
						  <label class="col-sm-2 control-label">Radius Units</label>
						  <div class="col-sm-10">
						  <select id="service_radius_units" name="service_radius_units" class="form-control">
							<%
								var kms = "";
								var miles = "";
								if(service.service_radius_units == "Km" || service.service_radius_units == "Kms" ) {
									kms = "selected";
								} else {
									miles = "selected";
								}
							%>
							<option value="Km" <%=kms%>>Km</option>
							<option value="Miles" <%=miles%>>Miles</option>
						  </select>
						  </div>
                  </div>
				  
				  <div class="bootstrap-timepicker">
						<div class="form-group">
						  <label class="col-sm-2 control-label">Weekday Start Time</label>

						  <div class="input-group" style="max-width: 81%; padding-left: 15px;">
							<div class="input-group-addon">
							  <i class="fa fa-clock-o"></i>
							</div>
							<input type="text" class="form-control timepicker" id="weekday_start_time" name="weekday_start_time" value="<%=service.weekday_start_time%>">
							
						  </div>
						</div>
				 </div>
				  
				  <div class="bootstrap-timepicker">
						<div class="form-group">
						  <label class="col-sm-2 control-label">Weekday Stop Time</label>

						  <div class="input-group" style="max-width: 81%; padding-left: 15px;">
							<div class="input-group-addon">
							  <i class="fa fa-clock-o"></i>
							</div>
							<input type="text" class="form-control timepicker" id="weekday_stop_time" name="weekday_stop_time" value="<%=service.weekday_stop_time%>">
							
						  </div>
						</div>
				 </div>
				 
				  <div class="bootstrap-timepicker">
						<div class="form-group">
						  <label class="col-sm-2 control-label">Weekend Start Time</label>

						  <div class="input-group" style="max-width: 81%; padding-left: 15px;">
							<div class="input-group-addon">
							  <i class="fa fa-clock-o"></i>
							</div>
							<input type="text" class="form-control timepicker" id="weekend_start_time" name="weekend_start_time" value="<%=service.weekend_start_time%>">
							
						  </div>
						</div>
				 </div>
				 
				  <div class="bootstrap-timepicker">
						<div class="form-group">
						  <label class="col-sm-2 control-label">Weekend Stop Time</label>

						  <div class="input-group" style="max-width: 81%; padding-left: 15px;">
							<div class="input-group-addon">
							  <i class="fa fa-clock-o"></i>
							</div>
							<input type="text" class="form-control timepicker" id="weekend_stop_time" name="weekend_stop_time" value="<%=service.weekend_stop_time%>">
							
						  </div>
						</div>
				 </div>
				  
				  <div class="form-group">
					<label for="service_availability" class="col-sm-2 control-label">Service Availability</label>

					<div class="col-sm-10">
					  <select class="form-control" id="service_availability" name="service_availability" multiple>
							<option value="">--Select --</option>
							<option value="available_monday" >Monday</option>
							<option value="available_tuesday" >Tuesday</option>
							<option value="available_wednesday" >Wednesday</option>
							<option value="available_thursday" >Thursday</option>
							<option value="available_friday" >Friday</option>
							<option value="available_saturday" >Saturday</option>
							<option value="available_sunday" >Sunday</option>							
					  </select>
					</div>
				  </div>
				  
				  <div class="form-group">
                    <label for="is_active" class="col-sm-2 control-label">Active</label>

                    <div class="col-sm-10">
						<%
						if(service.is_active == "1" || service.is_active == 1)
							checked = "checked";
						else
							checked = "";
						%>
						<label class="switch" style="margin-left: 10px;">
						  <input type="checkbox" id="is_active" name="is_active" <%=checked%> style="position: relative; top: 7px;" />
						  <span class="slider round"></span>
						</label>
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <label for="cancel_hours" class="col-sm-2 control-label">Prior Cancellation Hours</label>

                    <div class="col-sm-10">
                      <input type="number" value="<%=service.cancel_hours %>" name="cancel_hours" class="form-control" id="cancel_hours" placeholder="Prior Cancellation Hours" />
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <label for="cancel_fee" class="col-sm-2 control-label">Cancellation Fee</label>

                    <div class="col-sm-10">
                      <input type="number" value="<%=service.cancel_fee %>" name="cancel_fee" class="form-control" id="cancel_hours" placeholder="Cancellation Fee" />
                    </div>
                  </div>
				  
                  <div class="form-group">
                    <label for="reschedule_hours" class="col-sm-2 control-label">Prior Reschedule Hours</label>

                    <div class="col-sm-10">
                      <input type="number" value="<%=service.reschedule_hours %>" name="reschedule_hours" class="form-control" id="reschedule_hours" placeholder="Prior Reschedule Hours" />
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <label for="reschedule_fee" class="col-sm-2 control-label">Reschedule Fee</label>

                    <div class="col-sm-10">
                      <input type="number" value="<%=service.reschedule_fee %>" name="reschedule_fee" class="form-control" id="reschedule_fee" placeholder="Reschedule Fee" />
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <label for="cancel_rsh_policy" class="col-sm-2 control-label">Cancellation/ Reschedule Policy</label>

                    <div class="col-sm-10 " >
                      <input type="file" value="<%=service.cancel_rsh_policy %>" name="cancel_rsh_policy" class="form-control" id="cancel_rsh_policy" style="padding-left: 0px; padding-top: 0px;"/>
					  <% if(service.cancel_rsh_policy) { %>
						<a href="<%=service.cancel_rsh_policy%>" target="_blank">View Policy</a>
					  <% } %>
                    </div>
                  </div>
				  
				  <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                      <input type="hidden" id="service_id" name="service_id" value="<%=service._id; %>">
                      <button type="submit" id="submit" class="btn btn-success">Submit</button>
                      <button type="button" id="btndelete" class="btn btn-danger">Delete</button>
                    </div>
                  </div>
                </form>
              </div>
                            
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  
  <script language="javascript">
  //Date picker
  jQuery(document).ready(function(){
	 jQuery('#expiry_date').datepicker({
      autoclose: true
	 });
	 //Timepicker
     jQuery("#weekday_start_time").timepicker({
       showInputs: false
	 });
	 jQuery("#weekday_stop_time").timepicker({
       showInputs: false
	 });
	 jQuery("#weekend_start_time").timepicker({
       showInputs: false
	 });
	 jQuery("#weekend_stop_time").timepicker({
       showInputs: false
	 });
  });
   
  </script>
  <%-include('../footer') %> 
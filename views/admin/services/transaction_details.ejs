<%-include('../header') %> 
<%-include('../sidebar') %>
   <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <h1>
        View Transaction
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="/admin/transaction_list">View Transactions</a></li>
        <li class="active">View Details</li>
      </ol>
    </section>
    <!-- Main content -->
    <section class="content">

      <div class="row">
        <div class="col-md-3">
 <% if (locals.flashmessages) { %>
    <div class="alert alert-<%=flashmessages.alert_type%> alert-dismissible">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">Ã—</button>
      <%=flashmessages.alert_msg%>
    </div>
    <% } %>
          <!-- Profile Image -->
          <div class="box box-primary">
            <div class="box-body box-profile">				
              <h4 class=" text-center">Transaction Details</h4>
            </div>
          </div>  
        </div>
        <!-- /.col -->
        <div class="col-md-9">
          <div class="alert alert-success" id="success_alert" style="display: none;">
  <strong>Success!</strong>
</div>

          <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#summary" data-toggle="tab">Summary</a></li>
              <li ><a href="#trandetail" data-toggle="tab">Transaction</a></li>
            </ul>
            <div class="tab-content">
              <div class="active tab-pane" id="summary">
				<ul class="list-group list-group-unbordered">
					<li class="list-group-item">
						<b >Name</b>
						<a class="pull-right"><%=user.fullname%></a>
					</li>
					
					<li class="list-group-item">
						<b >Amount</b>
						<a class="pull-right"><%=transaction.currency%> <%=parseFloat(transaction.amount/100).toFixed(2)%></a>
					</li>
					
					<li class="list-group-item">
						<b >Date</b>
						<a class="pull-right"><%=transaction.created_at%></a>
					</li>
					
					<li class="list-group-item">
						<b >Appointment ID</b>
						<a class="pull-right"><%=transaction.appointment_id%></a>
					</li>
					
					
					<li class="list-group-item">
						<b >Appointment Date</b>
						<a class="pull-right"><%=appointment_date%></a>
					</li>
					
					<li class="list-group-item">
						<b >Service Provider</b>
						<a class="pull-right"><%=provider_name%></a>
					</li>
					<%
						var transaction_status = "Failed";
						if(transaction.payment_details != null && transaction.payment_details != undefined && transaction.payment_details.status != undefined && transaction.payment_details.status != null) {
							transaction_status = transaction.payment_details.status;
						}
						
						transaction_status = transaction_status.charAt(0).toUpperCase() + transaction_status.slice(1);
						if(transaction_status == "Succeeded")
							var transaction_status_html = "<span style='background: #00ff00; padding: 4px;'>" + transaction_status + "</span>";
						else
							var transaction_status_html = "<span style='background: #ff0000; padding: 4px;'>" + transaction_status + "</span>";
				    %>
					
					<li class="list-group-item">
						<b >Status</b>
						<a class="pull-right"><%- transaction_status_html%></a>
					</li>
				</ul>
              </div>
              
			  
			  <div class="tab-pane" id="trandetail">
				<ul class="list-group list-group-unbordered">
					<% if(transaction.payment_details == null || transaction.payment_details == undefined) { %>
						<li class="list-group-item">
							<b>Transaction Details not available</b>
						</li>
					<% } else if(transaction.payment_details.id == undefined || transaction.payment_details.id == null) { %>
						<li class="list-group-item">
							<b>Status Code</b>
							<a class="pull-right"><%=transaction.payment_details.statusCode%></a>
						</li>
						<li class="list-group-item">
							<b>Code</b>
							<a class="pull-right"><%=transaction.payment_details.code%></a>
						</li>
						<li class="list-group-item">
							<b>Message</b>
							<a class="pull-right"><%=transaction.payment_details.message%></a>
						</li>
						<li class="list-group-item">
							<b>Request ID</b>
							<a class="pull-right"><%=transaction.payment_details.requestId%></a>
						</li>
						<li class="list-group-item">
							<b>Token</b>
							<a class="pull-right"><%=transaction.token%></a>
						</li>
					<% } else if(transaction.payment_details.id) { %>
						<li class="list-group-item">
							<b>Status</b>
							<a class="pull-right"><%=transaction.payment_details.status%></a>
						</li>
						<li class="list-group-item">
							<b>Transaction ID</b>
							<a class="pull-right"><%=transaction.payment_details.id%></a>
						</li>
						<li class="list-group-item">
							<b>Object</b>
							<a class="pull-right"><%=transaction.payment_details.object%></a>
						</li>
						<li class="list-group-item">
							<b>Balance Transaction</b>
							<a class="pull-right"><%=transaction.payment_details.balance_transaction%></a>
						</li>
						<li class="list-group-item">
							<b>Captured</b>
							<a class="pull-right"><%=transaction.payment_details.captured%></a>
						</li>
						<li class="list-group-item">
							<b>Description</b>
							<a class="pull-right"><%=transaction.payment_details.description%></a>
						</li>
						<li class="list-group-item">
							<b>LiveMode</b>
							<a class="pull-right"><%=transaction.payment_details.livemode%></a>
						</li>
						<li class="list-group-item">
							<b>Paid</b>
							<a class="pull-right"><%=transaction.payment_details.paid %></a>
						</li>
						<li class="list-group-item">
							<b>Token</b>
							<a class="pull-right"><%=transaction.token%></a>
						</li>
					<% } %>
				</ul>
			 </div>
			  
            </div>
            <!-- /.tab-content -->
          </div>
          <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->

    </section>
    <!-- /.content -->
  </div>
  <style>
  .top-spaced { padding-top: 7px; font-weight: 500; }
  </style>
  <%-include('../footer') %> 
  
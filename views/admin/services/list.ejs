<%-include('../header') %> 
<%-include('../sidebar') %> 
<div class="content-wrapper">
   
    <section class="content-header">
      <h1>
       Services 
      </h1>
      <ol class="breadcrumb">
        <li><a href="/admin/dashboard"><i class="fa fa-dashboard"></i> Dashboard</a></li>
        <li class="active">View Services</li>
      </ol>
    </section>
    <section class="content">
      <div class="row">
        <div class="col-xs-12">
          <div class="box box-primary">
            
           
            <div class="box-body">
              <table id="example2" class="table table-bordered table-hover">
                <thead>
                <tr>
                  <th>#</th>                  
                  <th>Service Name</th>
                  <th>Type</th>
                  <th>Email</th>
                  <th>Active</th>
                  <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <% var count=1; for(var i=0; i<services_list.length; i++){%>
                <tr>
                  <td><%=count%></td>
                  <td><%=services_list[i].service_name%></td>
                  <td><%=(services_list[i].service_type == "business")? "Business": "Individual" %></td>
                  <td><%=services_list[i].userdata.email%></td>
                  <td><%=(services_list[i].is_active? "Yes" : "No")%></td>
                  <td> <a class="btn btn-xs btn-info" href="/admin/services/edit/<%=services_list[i]._id%>" style="margin-right: 10px;">Edit / View</a><a class="btn btn-xs btn-danger" onclick="return confirm('Are you sure you want to delete ?');" href="/admin/services/delete/<%=services_list[i]._id%>">Delete</a></td>
                </tr>
                <% count++; } %>
                </tbody>
                <tfoot>
                <tr>
                  <th>#</th>                  
                  <th>Service Name</th>
                  <th>Type</th>
                  <th>Email</th>
                  <th>Active</th>
                  <th>Action</th>
                </tr>
                </tfoot>
              </table>
            </div>
          
          </div>
         
        </div>
      
      </div>
      
    </section>
    
  </div>  
    <%-include('../footer') %> 